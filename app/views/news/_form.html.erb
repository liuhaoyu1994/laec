<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@news) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.file_field :image %>

      <%= f.label :category %>
      <%= f.select(:categoty, options_for_select([['Home Page', 1], ['Team Page', 2], ['None', 3]])) %>
      
      <%= f.label :year %>
      <%= f.number_field :year, class: 'form-control' %>
      
      <%= f.label :month %>
      <%= f.text_field :month, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
