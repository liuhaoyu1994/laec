<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

     
      <%= f.label :"First Name" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :"Last Name" %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :department %>
      <%= f.select(:department, options_for_select([['Students', 2],['Senior Staff', 1], ['Past Members', 3], ['Co-op Students', 4], ['Principle Investigator', 5]])) %>
      
      <%= f.label :cellphone %>
      <%= f.text_field :tel, class: 'form-control' %>
            
       <%= f.label :bio %>
      <%= f.text_area :bio, class: 'form-control' %>
            
            
      <%= f.file_field :image %>

      <%= link_to "delete", @user, method: :delete,
                                        data: { confirm: "You sure?" } %>
      <%= f.submit "Update my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
