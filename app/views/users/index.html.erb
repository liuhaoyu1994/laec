<% provide(:title, 'All users') %>
<h1>All users</h1>



<% if !logged_in? %> 
  <%= link_to "Log in", login_path %>
<% else %>
  <ul class="users">
    <%= link_to current_user.name, current_user, :class => "btn btn-danger col-md-12" %>

    <div class = "user_list">
    <% @users.each do |user| %>
      <div class = "user_thumb">
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
      </div>    
    <% end %>
    </div>
  </ul>

<% end %>
