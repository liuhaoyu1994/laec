<% provide(:title, 'New Project') %>
<h1>New Project</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for(@project) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.label :publication %>
      <%= f.text_field :publication, class: 'form-control' %>

      <%= f.label :user_id %>
      <%= f.text_field :user_id, class: 'form-control' %>


      <%= f.file_field :image %>

      <ul class = "users-list">
        <div class = "users-icon">
          <% @users.each do |user| %>
              <div class = "users-selection">
                <%= gravatar_for user, size: 50 %>
                <%= link_to user.name, user %>
              </div>
          <% end %>
        </div>
      </ul>
      
      <%= f.submit "Create my project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>