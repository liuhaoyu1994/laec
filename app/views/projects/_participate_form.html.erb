<ul>
        <div class = "participate_list">
          <% @users = @users - @authors%>
          <% @users.each do |user| %>
              <div class = "item">
              <div class = "card_pic card_pic2 col-md-4">
                <%= link_to image_tag(user.image.url()), user.image.url %>
               </div>                
                <%= link_to user.name, user %>
                <% if user.participate?(@project) %>
                  <%= render partial: "projects/quit", locals: { user: user, project: @project} %> 
                <% else %>
                  <%= render partial: "projects/participate", locals: { user: user, project: @project} %> 
                <% end %> 
              </div>
          <% end %>
        </div>
          <div class = "participate_list">
            <% @authors.each do |user| %>
              <div class = "item">
              <div class = "card_pic card_pic2 col-md-4">
                <%= link_to image_tag(user.image.url()), user.image.url %>
              </div>                  
                <%= link_to user.name, user %>
                <% if user.participate?(@project) %>
                  <%= render partial: "projects/quit", locals: { user: user, project: @project} %> 
                <% else %>
                  <%= render partial: "projects/participate", locals: { user: user, project: @project} %> 
                <% end %> 
              </div>
            <% end %>
          </div>
        </div>
</ul>