<ul>
        <div>
          <% @users.each do |user| %>
              <div>
                <%= gravatar_for user, size: 50 %>
                <%= link_to user.name, user %>
                <% if user.participate?(@project) %>
                  <%= form_for(@project.relationships.find_by(article_id: @project.id),
                               html: { method: :delete }) do |f| %>
                    <div><%= hidden_field_tag :author_id, user.id %></div>
                    <div><%= hidden_field_tag :article_id, @project.id %></div>
                    <%= f.submit "Quit", class: "btn btn-danger" %>
                  <% end %>                  
                <% else %>
                  <%= form_for(@project.relationships.build) do |f| %>
                    <div><%= hidden_field_tag :author_id, user.id %></div>
                    <div><%= hidden_field_tag :article_id, @project.id %></div>
                    <%= f.submit "Participate", class: "btn btn-primary" %>
                  <% end %>
                <% end %>
                
                
               
                
                
                
                
              </div>
          <% end %>
        </div>
</ul>