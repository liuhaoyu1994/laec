<% provide(:title, 'All projects') %>
<div class = "term_detail">
  <div class = "topic">All Projects</div>
    <div class="projects">
      <% @projects.each do |project| %>
          <div class = "project_brief">
            <div class = "project_thumb">
              <%= link_to image_tag(project.image.url()), project%>
            </div>
            <%= link_to project.title, project, {:class=>"thumb-title col-xs-12 col-md-12"}%>
            <%= truncate(project.description, :length => 250) %>
            <%= link_to "View more", project%>
          </div>
      <% end %>
    </div>
  </div>
